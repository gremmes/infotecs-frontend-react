{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES2015", "ES2016", "ES2017"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
